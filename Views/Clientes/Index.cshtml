@model IEnumerable<ServicioMontacargas.Models.ClientesModel>

@{
    ViewData["Title"] = "Lista Clientes";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Lista de Clientes</h1>

    <p>
        <div class="d-flex justify-content">
            <a class="btn btn-primary" asp-action="Create">Agregar Nuevo</a>
        </div>
    </p>
    <div class="table-responsive-sm">
        <table class="table table-striped table-hover" id="tb_monta" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th style="text-align:center !important;">
                        ID
                    </th>
                    <th style="text-align:center !important;">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th style="text-align:center !important;">
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </th>
                    <th style="text-align:center !important;">
                        @Html.DisplayNameFor(model => model.Ubicacion)
                    </th>
                    <th style="text-align:center !important;">
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdClientes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ubicacion)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdClientes"><iconify-icon icon="bi:pencil-square"></iconify-icon></a>
                            <a asp-action="Details" asp-route-id="@item.IdClientes"><iconify-icon icon="bi:eye-fill"></iconify-icon></a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#eliminarUsuario-@item.IdClientes" data-original-title="Eliminar">
                                <iconify-icon icon="bi:trash3-fill"></iconify-icon>
                            </a>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="eliminarUsuario-@item.IdClientes" tabindex="9999" aria-hidden="true" style="width:100%">
                        <div class="modal-dialog modal-contenedor">
                            <div class="modal-content contenedor-eliminar">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Eliminar Cliente</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Estas seguro que desea eliminar este Cliente?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
                                    <a asp-controller="Clientes" asp-action="DeleteConfirmed" asp-route-id="@item.IdClientes" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
