@model ServicioMontacargas.Models.ChecklistModel

@{
    ViewData["Title"] = "ReportePDF CheckList";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS CDN -->
