                            <td style="text-align: left; font-size:10px;">@Html.DisplayFor(model => model.AlarmaReversa)</td>
                        </tr>
                        <tr>
                            <th style="text-align: left; font-size:10px;">@Html.DisplayNameFor(model => model.Claxon)</th>
                            <td style="text-align: left; font-size:10px;">@Html.DisplayFor(model => model.Claxon)</td>
                        </tr>
                        <tr>
                            <th style="text-align: left; font-size:10px;">@Html.DisplayNameFor(model => model.Extintor)</th>
                            <td style="text-align: left; font-size:10px;">@Html.DisplayFor(model => model.Extintor)</td>
                        </tr>
                        <tr>
