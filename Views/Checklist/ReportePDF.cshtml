                            <td style="text-align: left; font-size:10px;">@Html.DisplayFor(model => model.PinturaGeneral)</td>
                        </tr>
                        <tr>
                            <th style="text-align: left; font-size:10px;">@Html.DisplayNameFor(model => model.CubiertaPiston)</th>
                            <td style="text-align: left; font-size:10px;">@Html.DisplayFor(model => model.CubiertaPiston)</td>
                        </tr>
                        <tr>
