                    <th>
                        @Html.DisplayNameFor(model => model.DistanciaFrenado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RespaldoCarga)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Horquillas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Golpes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tablero)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PinturaGeneral)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CubiertaPiston)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LlantasDireccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LlantasTraccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BateriaTerminales)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LimpiezaGeneral)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Radiador)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SistemaArranque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LucesTrabajo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LucesTraseras)
                    </th>
                    <th>
