    <h1>Lista de Revisiones</h1>
    <div>
        @if (TempData["FailChecklist"] != null)
        {
            <div class="alert alert-danger">
                @TempData["FailChecklist"]
            </div>
        }
        @if (TempData["ExitoChecklist"] != null)
        {
            <div class="alert alert-success">
                @TempData["ExitoChecklist"]
            </div>
        }
    </div>
    <p>
        <div class="d-flex justify-content">
            <a class="btn btn-primary" asp-action="Create">Agregar Nuevo</a>
        </div>
    </p>
