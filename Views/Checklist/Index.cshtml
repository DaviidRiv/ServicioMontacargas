                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FugaSistemaGas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistanciaFrenado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RespaldoCarga)
                        </td>
