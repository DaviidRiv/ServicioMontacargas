                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FaroProximidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ruidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
