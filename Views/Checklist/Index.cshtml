                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Montacargas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.horometro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NivelAceiteMotor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NivelAnticongelante)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NivelAceiteHidraulico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NivelLiquidoFrenos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BandaVentilador)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TanqueGasSoportes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FrenoEstacionamiento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FugaSistemaGas)
