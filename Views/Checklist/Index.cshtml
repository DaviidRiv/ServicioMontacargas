@model IEnumerable<ServicioMontacargas.Models.ChecklistModel>

@{
    ViewData["Title"] = "Lista Revisiones";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
</head>

