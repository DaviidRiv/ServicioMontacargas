@model ServicioMontacargas.Models.ChequeoDiarioModel;
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>ViewReportePDF</title>
</head>
<body>
    <table style="width: 100%; border: solid 1px;">
        <tr>
            <td style="border: none;">
                <img src="~/img/LogoJacasa.jpeg" width="280" height="110" />
            </td>
            <td style="border: none; color: darkblue;">
                <h4 style="text-align:center">Montacargas de San Luis S.A. de C.V.</h4>
                <h5 style="text-align:center">Las Vegas 235 San Luis Potosi, S.L.P.</h5>
                <h5 style="text-align:center">Tel 444 166 1000</h5>
            </td>
        </tr>
    </table>
    <br />
    <table style="width: 100%; border: none;">
        <tr>
            <td style="border: none; color: darkblue; vertical-align: top; line-height: 0; font-size:20px; width:70%; text-align:left">
                <p><strong>LISTA DE CHEQUEO DIARIO PARA OPERADOR : @Model.IdChequeoDiario </strong></p>
                <p>Para montacargas de combustion interna.</p>
            </td>
        </tr>
    </table>
    <br />
    <table style="width: 100%; border: none;">
        <tr>
            <td style="border: none; vertical-align: top; line-height: 0; font-size:20px; width:70%; text-align:left">
                <p>Nombre Operador : @Model.NombreOperador</p>
            </td>
            <td style="border: none; vertical-align: top; line-height: 0; font-size:20px; width:70%; text-align:left">
                <p>Fecha : @Model.Fecha</p>
                <p>Montacargas : @Model.Montacargas.NumeroEconomico</p>
                <p>Horometro : @Model.HorometroActual</p>
            </td>
        </tr>
    </table>
    <br />
    <table style="width: 100%; border: none;">
        <tr>
            <td style="border: none; width:50%; text-align:left">
