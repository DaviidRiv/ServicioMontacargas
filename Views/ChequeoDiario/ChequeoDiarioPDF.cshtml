                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.SistemaLevante)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.SistemaLevante)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.EquipoSeguridad)</th>
