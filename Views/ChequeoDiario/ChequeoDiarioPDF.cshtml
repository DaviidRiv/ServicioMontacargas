                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.CinturonSeguridad)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.CinturonSeguridad)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.EspejoRetrovisor)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.EspejoRetrovisor)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.Alarma)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.Alarma)</td>
                    </tr>
