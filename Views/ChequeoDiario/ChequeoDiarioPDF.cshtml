                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.FugaLineaGas)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.FuncPedestalFreno)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.FuncPedestalFreno)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.FrenoMano)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.FrenoMano)</td>
                    </tr>
                    <tr>
