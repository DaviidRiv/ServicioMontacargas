                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.FugasAceiteH)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.FuncDireccion)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.FuncDireccion)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.IndicadoresTemp)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.IndicadoresTemp)</td>
                    </tr>
                    <tr>
                        <th style="text-align: left; font-size:12px;">@Html.DisplayNameFor(model => model.IndicadoresVolt)</th>
                        <td style="text-align: left; font-size:12px;">@Html.DisplayFor(model => model.IndicadoresVolt)</td>
                    </tr>
                    <tr>
