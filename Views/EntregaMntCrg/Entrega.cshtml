@model ServicioMontacargas.Models.EntregaMntCrgModel

@{
    ViewData["Title"] = "Recolección Montacarga";
}
<head>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/signature_pad/1.5.3/signature-pad.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/signature_pad/1.5.3/signature_pad.min.js"></script>
</head>
<h1>Editar Recolección de Montacargas @Model.IdEntregaMntCrg</h1>
<hr />
<form asp-controller="EntregaMntCrg" asp-action="Recoleccion" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="id" value="@Model.IdEntregaMntCrg" />
    <input type="hidden" asp-for="@Model.IdEntregaMntCrg" />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label"></label>
                <input type="text" asp-for="FechaEntrega" class="form-control text-muted" readonly/>
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorometroEntrega" class="control-label"></label>
                <input asp-for="HorometroEntrega" class="form-control text-muted" readonly/>
                <span asp-validation-for="HorometroEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRecoleccion" class="control-label"></label>
                <input type="datetime-local" name="FechaRecoleccion" class="form-control text-muted" required/>
                <span asp-validation-for="FechaRecoleccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorometroRecoleccion" class="control-label"></label>
                <input asp-for="HorometroRecoleccion" class="form-control text-muted" required />
                <span asp-validation-for="HorometroRecoleccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="idMontacargas" class="form-control text-muted" />
                <span asp-validation-for="idMontacargas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NivelAceiteMotor" class="form-control text-muted" />
                <span asp-validation-for="NivelAceiteMotor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NivelAnticongelante" class="form-control text-muted" />
                <span asp-validation-for="NivelAnticongelante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NivelAceiteHidraulico" class="form-control text-muted" />
                <span asp-validation-for="NivelAceiteHidraulico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NivelLiquidoFrenos" class="form-control text-muted" />
                <span asp-validation-for="NivelLiquidoFrenos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AceiteDiferencial" class="form-control text-muted" />
                <span asp-validation-for="NivelLiquidoFrenos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TanqueGasSoportes" class="form-control text-muted" />
                <span asp-validation-for="TanqueGasSoportes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="FrenoEstacionamiento" class="form-control text-muted" />
                <span asp-validation-for="FrenoEstacionamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="FugaSistemaGas" class="form-control text-muted" />
                <span asp-validation-for="FugaSistemaGas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ElementoAire" class="form-control text-muted" />
                <span asp-validation-for="ElementoAire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DistanciaFrenado" class="form-control text-muted" />
                <span asp-validation-for="DistanciaFrenado" class="text-danger"></span>
            </div>            
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Observaciones" class="control-label">Nuevas Observaciones</label>
                <textarea asp-for="Observaciones" class="form-control text-muted" rows="4" required></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <input asp-for="NombreCliente" class="form-control text-muted" readonly />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaCliente" class="control-label"></label>
                <input asp-for="EmpresaCliente" class="form-control text-muted" readonly />
                <span asp-validation-for="EmpresaCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="CapacidadCarga" class="form-control text-muted" />
                <span asp-validation-for="CapacidadCarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RespaldoCarga" class="form-control text-muted" />
                <span asp-validation-for="RespaldoCarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Horquillas" class="form-control text-muted" />
                <span asp-validation-for="Horquillas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Tablero" class="form-control text-muted" />
                <span asp-validation-for="Tablero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PinturaGeneral" class="form-control text-muted" />
                <span asp-validation-for="PinturaGeneral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CubiertaPiston" class="form-control text-muted" />
                <span asp-validation-for="CubiertaPiston" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LlantasDireccion" class="form-control text-muted" />
                <span asp-validation-for="LlantasDireccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LlantasTraccion" class="form-control text-muted" />
                <span asp-validation-for="LlantasTraccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="BateriaTerminales" class="form-control text-muted" />
                <span asp-validation-for="BateriaTerminales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LimpiezaGeneral" class="form-control text-muted" />
                <span asp-validation-for="LimpiezaGeneral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="SistemaArranque" class="form-control text-muted" />
                <span asp-validation-for="SistemaArranque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LucesTrabajo" class="form-control text-muted" />
                <span asp-validation-for="LucesTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LucesTraseras" class="form-control text-muted" />
                <span asp-validation-for="LucesTraseras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Torreta" class="form-control text-muted" />
                <span asp-validation-for="Torreta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AlarmaReversa" class="form-control text-muted" />
                <span asp-validation-for="AlarmaReversa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EvidenciaImagen1Base64" class="form-control" />
                <span asp-validation-for="EvidenciaImagen1" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="NombreJacsa" class="control-label"></label>
                <input asp-for="NombreJacsa" class="form-control text-muted" readonly />
                <span asp-validation-for="NombreJacsa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Claxon" class="form-control text-muted" />
                <span asp-validation-for="Claxon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Extintor" class="form-control text-muted" />
                <span asp-validation-for="Extintor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Espejos" class="form-control text-muted" />
                <span asp-validation-for="Espejos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CinturonSeguridad" class="form-control text-muted" />
                <span asp-validation-for="CinturonSeguridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Asiento" class="form-control text-muted" />
                <span asp-validation-for="Asiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="FaroProximidad" class="form-control text-muted" />
                <span asp-validation-for="FaroProximidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Llave" class="form-control text-muted" />
                <span asp-validation-for="Llave" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <div>
                    <input type="hidden" asp-for="FirmaCliente" id="hiddenFirmaCliente" />
                    <span asp-validation-for="FirmaCliente" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EvidenciaImagen2Base64" class="form-control" />
                <span asp-validation-for="EvidenciaImagen2" class="text-danger"></span>
            </div>
        </div>
        <center>
            <div class="form-group">
                <br />
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </center>
    </div>
</form>

<div>
    <br />
    <a asp-action="Index"><iconify-icon icon="bi:arrow-left-circle-fill"></iconify-icon> Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var canvas = new SignaturePad(document.getElementById('signatureCanvas'), {
            backgroundColor: 'rgb(255, 255, 255)',
            penColor: 'rgb(0, 0, 0)'
        });

        function clearSignature() {
            canvas.clear();
            document.getElementById('hiddenFirmaCliente').value = '';
        }

        canvas.onEnd = function () {
            document.getElementById('hiddenFirmaCliente').value = canvas.toDataURL();
        };
    </script>
}