            <img src="data:image/jpeg;base64, @Html.DisplayFor(model => model.EvidenciaImagen1Base64)" alt="Evidencia1" width="380" height="380" />
            <img src="data:image/jpeg;base64, @Html.DisplayFor(model => model.EvidenciaImagen2Base64)" alt="Evidencia2" width="380" height="380" />
        </p>
        <h3>Evidencias Recolección</h3>
        <p>
            <img src="data:image/jpeg;base64, @Html.DisplayFor(model => model.EvidenciaRImagen1Base64)" alt="RecolecciónEvidencia1" width="380" height="380" />
            <img src="data:image/jpeg;base64, @Html.DisplayFor(model => model.EvidenciaRImagen2Base64)" alt="RecolecciónEvidencia2" width="380" height="380" />
        </p>
    </div>
    <button id="generatePdf">Generar PDF</button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.3.2/html2canvas.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.0/html2pdf.bundle.js"></script>

    <script>
        generatePdf.onclick = function () {
            var element = document.body; // Elemento que quieres convertir a PDF
            var options = {
                filename: 'Entrega Equipo en Renta ' + @Model.IdEntregaMntCrg + '.pdf', // Puedes cambiar 'nombre_del_documento' por el nombre que desees
            };
            html2pdf(element, options);
        }
    </script>


</body>
