@model IEnumerable<ServicioMontacargas.Models.EntregaMntCrgModel>

@{
    ViewData["Title"] = "Lista Entrega Montacargas";
}

<h1>Lista de Entregas de Montacargas</h1>

<p>
    <div class="d-flex justify-content">
        <a class="btn btn-primary" asp-controller="EntregaMntCrg" asp-action="Create">Generar Entrega</a>
    </div>
</p>
<div class="table-responsive-sm">
    <table class="table table-striped table-hover" id="tb_entrega" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>
                    Folio
                </th>
                <th>
                    Fecha Entrega
                </th>
                <th>
                    Horometro Entrega
                </th>
                <th>
                    Fecha Recoleccion
                </th>
                <th>
                    Horometro Recoleccion
                </th>
                <th>
                    Montacargas
                </th>
                <th>
                    Aceite Motor
                </th>
                <th>
                    Anticogelante
                </th>
                <th>
                    Aceite Hidraulico
                </th>
                <th>
                    Liquido Frenos
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AceiteDiferencial)
                </th>
                <th>
                    Gas y Soportes
                </th>
                <th>
                    Freno Estacionamiento
                </th>
                <th>
                    Fugas
                </th>
                <th>
                    Elemento de aire
                </th>
                <th>
                    Distancia frenado
                </th>
                <th>
                    Capacidad de carga
                </th>
                <th>
                    Respaldo de carga
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horquillas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tablero)
                </th>
                <th>
                    Pintura General
                </th>
                <th>
                    Cubierta y Piston
                </th>
                <th>
                    Llantas direccion
                </th>
                <th>
                    Llantas traccion
                </th>
                <th>
                    Bateria y terminales
                </th>
                <th>
                    Limpieza General
                </th>
                <th>
                    Sistema arranque
                </th>
                <th>
                    Luces trabajo
                </th>
                <th>
                    Luces traseras
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Torreta)
                </th>
                <th>
                    Alarma Reversa
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Claxon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Extintor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Espejos)
                </th>
                <th>
                    Cinturon Seguridad
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Asiento)
                </th>
                <th>
                    Faro de proximidad
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observaciones)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Llave)
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Entregante
                </th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEntregaMntCrg)
                    </td>
                    <td style="font-size:small;">
                        @item.FechaEntrega.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorometroEntrega)
                    </td>
                    @{
                        string? fechaFormateada;
                        if (@item.FechaRecoleccion.HasValue)
                        {
                            DateTime fecha = @item.FechaRecoleccion.Value;
                            fechaFormateada = fecha.ToString("dd-MM-yyyy");

                        }
                        else
                        {
                            fechaFormateada = null;
                        }
                    }
                    <td style="font-size:small;">
                        @fechaFormateada
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorometroRecoleccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idMontacargas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NivelAceiteMotor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NivelAnticongelante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NivelAceiteHidraulico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NivelLiquidoFrenos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AceiteDiferencial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TanqueGasSoportes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FrenoEstacionamiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FugaSistemaGas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ElementoAire)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DistanciaFrenado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CapacidadCarga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RespaldoCarga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Horquillas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tablero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PinturaGeneral)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CubiertaPiston)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LlantasDireccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LlantasTraccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BateriaTerminales)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LimpiezaGeneral)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SistemaArranque)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LucesTrabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LucesTraseras)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Torreta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlarmaReversa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Claxon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Extintor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Espejos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CinturonSeguridad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FaroProximidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observaciones)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Llave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpresaCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreJacsa)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdEntregaMntCrg"><iconify-icon icon="bi:pencil-square"></iconify-icon></a>
                        <a asp-action="Details" asp-route-id="@item.IdEntregaMntCrg"><iconify-icon icon="bi:eye-fill"></iconify-icon></a>
                        <a href="#" data-bs-toggle="modal" data-bs-target="#eliminarUsuario-@item.IdEntregaMntCrg" data-original-title="Eliminar"><iconify-icon icon="bi:trash3-fill"></iconify-icon></a>
                        <a asp-action="Entrega" asp-route-id="@item.IdEntregaMntCrg"><iconify-icon icon="mdi:timer-edit"></iconify-icon></a>
                        <a asp-action="DescargarPDF" asp-route-id="@item.IdEntregaMntCrg"><iconify-icon icon="bxs:file-pdf"></iconify-icon></a>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="eliminarUsuario-@item.IdEntregaMntCrg" tabindex="9999" aria-hidden="true" style="width:100%">
                    <div class="modal-dialog modal-contenedor">
                        <div class="modal-content contenedor-eliminar">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Eliminar Entrega de Montacarga</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                ¿Estas seguro que desea eliminar esta Entrega?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
                                <a asp-controller="EntregaMntCrg" asp-action="DeleteConfirmed" asp-route-id="@item.IdEntregaMntCrg" class="btn btn-danger">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

