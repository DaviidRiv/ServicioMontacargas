@model IEnumerable<ServicioMontacargas.Models.UsuariosModel>

@{
    ViewData["Title"] = "Lista Usuarios";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="col py-3">
        <h1>Lista de Usuarios</h1>

        <p>
            <div class="d-flex justify-content">
                <a class="btn btn-primary" asp-action="Create">Agregar Nuevo</a>
            </div>
        </p>

        <table class="table table-striped table-hover" id="tb_monta" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.IdUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoM)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rolUser)
                    </th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoM)
                        </td>
                        <td>
                            ******
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.rolUser)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdUsuario"><iconify-icon icon="bi:pencil-square"></iconify-icon></a>
                            <a asp-action="Details" asp-route-id="@item.IdUsuario"><iconify-icon icon="bi:eye-fill"></iconify-icon></a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#eliminarUsuario-@item.IdUsuario" data-original-title="Eliminar">
                                <iconify-icon icon="bi:trash3-fill"></iconify-icon>
                            </a>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="eliminarUsuario-@item.IdUsuario" tabindex="9999" aria-hidden="true" style="width:100%">
                        <div class="modal-dialog modal-contenedor">
                            <div class="modal-content contenedor-eliminar">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Eliminar Usuario</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Estas seguro que desea eliminar este Usuario?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <a asp-controller="Usuarios" asp-action="DeleteConfirmed" asp-route-id="@item.IdUsuario" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
