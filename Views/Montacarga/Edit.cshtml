@model ServicioMontacargas.Models.MontacargasModel

@{
    ViewData["Title"] = "Editar Montacargas";
}

<h1>Editar Montacargas @Model.NumeroEconomico</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <input type="hidden" asp-for="IdMontacargas" />
            <div class="form-group">
                <label class="control-label">Número de Serie</label>
                <input asp-for="NumeroSerie" class="form-control" required />
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Equipo</label>
                <input asp-for="Equipo" class="form-control" required />
                <span asp-validation-for="Equipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Número Económico</label>
                <input asp-for="NumeroEconomico" class="form-control" required />
                <span asp-validation-for="NumeroEconomico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" required />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" required />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horometro" class="control-label"></label>
                <input asp-for="Horometro" class="form-control" required />
                <span asp-validation-for="Horometro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estatus</label>
                <select asp-for="Status" class="form-select" required>
                    <option value="" disabled>--Seleccionar--</option>
                    <option value="En renta">En renta</option>
                    <option value="Disponible">Disponible</option>
                    <option value="En reparación">En reparación</option>
                    <option value="Baja">Baja</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="form-group">
                <br />
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>


<div>
    <br />
    <a asp-action="Index"><iconify-icon icon="bi:arrow-left-circle-fill"></iconify-icon> Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
