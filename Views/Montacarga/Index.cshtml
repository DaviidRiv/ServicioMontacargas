@model IEnumerable<ServicioMontacargas.Models.MontacargasModel>

@{
    ViewData["Title"] = "Lista Montacargas";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="col py-3">
        <h1>Lista de Montacargas</h1>

        <p>
            <div class="d-flex justify-content">
                <a class="btn btn-primary" asp-action="Create">Agregar Nuevo</a>
            </div>
        </p>
        <table class="table table-striped table-hover" id="tb_monta" style="width:100%">
            <thead class="table-dark">
                <tr>
                    @*<th>
                    Folio
                    </th>*@
                    <th>
                        No. Económico
                    </th>
                    <th>
                        Equipo
                    </th>
                    <th>
                        No de Serie
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Modelo
                    </th>
                    <th>
                        Mtto Anterior
                    </th>
                    <th>
                        Horómetro
                    </th>
                    <th>
                        Mtto Siguiente
                    </th>
                    <th>
                        Estatus
                    </th>
                    <th>
                        Cliente
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                    @Html.DisplayFor(modelItem => item.IdMontacargas)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroEconomico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroSerie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HorometroMtto) hrs
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Horometro) hrs
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HorasMtto) hrs
                        </td>
                        <td>
                            @{
                                if (item.Status == "Disponible")
                                {
                                    <span class="badge bg-success">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                }
                                else if (item.Status == "En renta")
                                {
                                    <span class="badge bg-info text-dark">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                }
                                else if (item.Status == "En reparación")
                                {
                                    <span class="badge bg-warning text-dark">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                }
                                else if (item.Status == "Baja")
                                {
                                    <span class="badge bg-danger">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                }
                                else if (item.Status == "Mantenimiento")
                                {
                                    <span class="badge bg-danger">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.Status)
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cliente)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdMontacargas"><iconify-icon icon="bi:pencil-square"></iconify-icon></a>
                            <a asp-action="Details" asp-route-id="@item.IdMontacargas"><iconify-icon icon="bi:eye-fill"></iconify-icon></a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#eliminarUsuario-@item.IdMontacargas" data-original-title="Eliminar">
                                <iconify-icon icon="bi:trash3-fill"></iconify-icon>
                            </a>
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="eliminarUsuario-@item.IdMontacargas" tabindex="9999" aria-hidden="true" style="width:100%">
                        <div class="modal-dialog modal-contenedor">
                            <div class="modal-content contenedor-eliminar">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Eliminar Montacarga</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Estas seguro que desea eliminar este Montacarga?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-cancelar" data-bs-dismiss="modal">Cancelar</button>
                                    <a asp-controller="Montacarga" asp-action="DeleteConfirmed" asp-route-id="@item.IdMontacargas" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</body>


