@model ServicioMontacargas.Models.SalidaModel

@{
    ViewData["Title"] = "Detalles Salida";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Detalles de la Salida @Model.FolioSalida</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdClientes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Clientes.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Montacargas)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Montacargas.NumeroEconomico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Almacen)
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var salidaItem in Model.SalidaItems)
                    {
                        <li>@($"{salidaItem.Almacen?.Nombre} - {salidaItem.Cantidad} {salidaItem.Almacen?.Medida}")</li>
                    }
                </ul>
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NombreRecibio)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NombreRecibio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirmaRecibio)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.FirmaRecibio" alt="Firma Recibio" width="100" height="100" />
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NombreEntrego)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NombreEntrego)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirmaEntrego)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.FirmaEntrego" alt="Firma Entrego" width="100" height="100" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.IdSalidaA"><iconify-icon icon="bi:pencil-square"></iconify-icon> Editar</a> |
        <a asp-action="Index"><iconify-icon icon="bi:arrow-left-circle-fill"></iconify-icon> Regresar</a>
    </div>
</body>